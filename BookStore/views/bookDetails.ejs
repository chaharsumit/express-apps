<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1><%= book.title %></h1>
  <h2><%= book.author %></h2>
  <p><%= book.description %></p>
  <h3>Price: <%= book.price %></h3>
  <a href="/books/<%= book.id %>/edit">edit</a>
  <a href="/books/<%= book.id %>/delete">delete</a>

  <form action="/books/<%= book.id %>/comments" method="POST">
    <textarea name="content" cols="30" rows="10" placeholder="Add comment"></textarea>
    <input type="submit" value="Add Comment">
  </form>

  <h2>Comments list</h2>
  <% book.comments.forEach(comment => { %>
    <div>
      <p><%= comment.content %></p>
      <a href="/comments/<%= comment.id %>/edit">edit comment</a>
      <a href="/comments/<%= comment.id %>/delete">delete comment</a>
    </div>
  <% }) %>
</body>
</html>